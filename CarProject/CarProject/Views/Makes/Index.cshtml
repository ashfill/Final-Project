@model IEnumerable<CarProject.Make>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MakeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacturer.ManufactuerName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MakeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer.ManufactuerName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MakeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.MakeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MakeID })
        </td>
    </tr>
}

</table>
